# Description: encrypted, bandwidth efficient backup
# URL:         http://duplicity.nongnu.org/
# Maintainer:  Slawomir Gonet, slawek at otwiera dot cz
# Depends on:  python-lockfile python-paramiko cryptography python-boto librsync gnupg 

name=duplicity
version=0.7.11
release=4
source=(https://code.launchpad.net/$name/${version%.*}-series/$version/+download/$name-$version.tar.gz)

build() {
	cd $name-$version

	python setup.py build
	python setup.py install --root=$PKG --optimize=1

	find $PKG -iname "*README*" -delete
	find $PKG -iname "*COPYING*" -delete
	rm -rf $PKG/usr/share/locale
}
